{
  "AWSEBDockerrunVersion": 2,
  "AWS_documentation": "https://docs.aws.amazon.com/AmazonECS/latest/developerguide/task_definition_parameters.html#container_definitions",
  "containerDefinitions":[
    {
      "name": "client",
      "image": "bleibig/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "bleibig/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "bleibig/multi-server",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "bleibig/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
